{
  "imports": {
    "regl": "https://esm.sh/regl@2.1.0"
  },
  "tasks": {
    "dev": "deno run -A npm:vite@7",
    "build": "deno run -A npm:vite@7 build",
    "preview": "deno run -A npm:vite@7 preview",
    "check": "deno check src/**/*.ts",
    "lint": "deno lint",
    "fmt": "deno fmt",
    "fmt:check": "deno fmt --check",
    "ci": "deno fmt --check && deno task build"
  },
  "exclude": ["dist", "node_modules"],
  "compilerOptions": {
    "lib": ["DOM", "ES2022"]
  },
  "nodeModulesDir": "auto"
}
